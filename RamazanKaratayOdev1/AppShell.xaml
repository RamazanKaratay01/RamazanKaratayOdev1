<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RamazanKaratayOdev1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RamazanKaratayOdev1"
    Shell.FlyoutBehavior="Flyout"
    Title="RamazanKaratayOdev1">

    <ShellContent
        Title="Ana Sayfa"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Kredi Hesaplayıcı"
        ContentTemplate="{DataTemplate local:KrediHesaplama}"
        Route="KrediHesaplama"/>
    <ShellContent
        Title="Renk Seçici"
        ContentTemplate="{DataTemplate local:RenkSecici}"
        Route="RenkSecici"/>
    <ShellContent
        Title="Yapılacaklar Listesi"
        ContentTemplate="{DataTemplate local:Todo}"
        Route="todo"/>
    <ShellContent
        Title="Vücut Kitle İndeksi"
        ContentTemplate="{DataTemplate local:VucutIndex}"
        Route="VucutIndex"/>
</Shell>
